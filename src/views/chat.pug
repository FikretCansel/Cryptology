extends layout

block content
    div.text-center
        div(class="form-signin")
            div.text-center
                p Welcome #{username}!
                div.row
                    div.col-md-3
                    div.col-md-6
                        h2 Resim Şifreleme
                        form(role="form" method="POST" action=`/encrypt-image`)
                            button.btn.btn-primary(type="submit") Encrypt Image 
                        h2 Tüm Kayıtlar
                        ul 
                            #chats
                            each val in chats
                                li(class="list-group-item" value="") #{val.message}

                        form(role="form" method="POST" action=`/chat/add?userName=${username}`)
                            div.form-group
                            input#name.form-control(type='text', placeholder='message' name='message' required)
                            button.btn.btn-primary(type="submit") Kaydet
                            #result
                            if result === "false"
                                p.text-danger  Kayıt Başarısız Hata
                        h2 Son kayıt
                        p #{lastItem.message}